<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvejemplo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hola Sebastian!"
        android:typeface="serif"
        android:textStyle="bold|italic"
        android:textSize="16sp"
        android:textAllCaps="true"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/etEjemplo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/style_et_bg"
        android:digits="0123456789 "
        android:ems="10"
        android:gravity="center"
        android:hint="Correo ElectrÃ³nico"
        android:drawableStart="@drawable/vector_email"
        android:padding="10dp"
        android:paddingStart="10dp"
        android:inputType="textCapSentences|textAutoCorrect"
        android:textColorHighlight="@color/material_dynamic_secondary30"
        android:textColor="@color/material_dynamic_neutral10"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="406dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>